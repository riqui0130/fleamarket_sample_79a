= render 'items/header'
.icon
  = link_to "/items/new", class: "icon__link" do
    .icon__title
      出品する
    .icon__image
      = image_tag 'icon_camera.png', height:'54px', weight:'54px'
- if @category.root?
  - breadcrumb :parent
- elsif @category.has_children?
  - breadcrumb :child
- else
  - breadcrumb :grandchild
= render "layouts/breadcrumbs"
= render 'items/banner'
= render 'items/footer'