.AccountPage
  .AccountPage__header
    %h1
      = link_to "/" do
        = image_tag 'logo.png', class: 'app'
  .AccountPage__main
    .AccountPage__container
      %h2.AccountPage__title ログイン情報を入力
      .AccountPage__form__sessions
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = flash[:alert]
          .AccountPage__content
            %p.text アカウントをお持ちでない方はこちら
            = link_to "新規会員登録", new_registration_path(resource_name), class: "SignUp"
            .FormField
              .FormField__label
                = f.email_field :email, class: 'FormField__input', autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
            .FormField
              .FormField__label
                = f.password_field :password, class: 'FormField__input', autocomplete: "current-password", placeholder: "パスワード"
                .actions
                  = link_to "パスワードをお忘れですか?", new_password_path(resource_name), class: "passwords"
            -# - if devise_mapping.rememberable?
            -#   .field
            -#     = f.check_box :remember_me
            -#     = f.label :remember_me
            .FormField
              = f.submit "Log in", class: "submit-btn"
  .AccountPage__footer
    %ul.FooterLists
      %li.FooterList プライバシーポリシー
      %li.FooterList FURIMA利用規約
      %li.FooterList 特定商取引に関する表記
    = link_to "/", class: "FooterLogo" do
      = image_tag 'logo-white.png', class: 'app'
