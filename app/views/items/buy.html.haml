%head
%meta{"charset":"UTF-8"}
%link{"href": "style.css", "rel": "stylesheet"}
%title Sample
%body
  .Header-buy
    .Header-buy__logo
      %span.image
      = image_tag 'payment_front/logo.png', height:'40px', weight:'100px'
  .Contents-buy
    .Contents-buy__title
      購入内容の確認
    .Contents-buy__items
      .Contents-buy__items--image
        %span.image
        = image_tag 'test/staff3.jpg', height:'150px', weight:'150px'
      .Contents-buy__items--introduction
        %p=@item.detail
        .Price-block
          送料込み(税込み)
          =@item.price
          円
    .Contents-buy__payment
      %div 支払い金額
      %div 
        =@item.price
        円
    .Contents-buy__creditcard
    
      - if @default_card_information.blank?
        .Contents-buy__creditcard--btn
          = link_to 'クレジットカードで支払う', new_creditcard_path, method: :get, class: "Header__naviBtn"
      - else
        .Contents-buy__creditcard--btn
          =link_to "カード設定", "/creditcard/show" , method: :get, class: "Menulink"
          -#以下カード情報を表示
          %label 登録クレジットカード情報
          %br
          %label カード番号：
          = "**** **** **** " + @default_card_information.last4
          %br
          %label 有効期限 月/年：
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year

    .Contents-buy__distination
      =form_with local: true do |f|
        .Contents-buy__distination--block
          %label 送付先名字
          = @destination.family_name
        .Contents-buy__distination--block
          %label 送付先名前
          = @destination.first_name
        .Contents-buy__distination--block
          %label 郵便番号
          = @destination.post_code
        .Contents-buy__distination--block
          %label 都道府県
          = @destination.prefecture
        .Contents-buy__distination--block
          %label 市区町村
          = @destination.city
        .Contents-buy__distination--block
          %label 番地
          = @destination.town
        .Contents-buy__distination--block
          %label マンション名、部屋番号
          = @destination.block
        .Contents-buy__distination--block
          %label 送付先電話番号
          = @destination.phone_number
    .Contents-buy__btn
      = form_tag(pay_item_path(:id), method: :post) do
        %button 購入する

  .Footer-buy
    %ul.Footer-buy__ul-box
      %li プライバシーポリシー
      %li フリマアプリ基本条約
      %li 特定商取引に関する表記
    .Footer-buy__logo
      %span.image
      = image_tag 'payment_front/logo-white.png', height:'40px', weight:'100px'
      %p @Frima,inc